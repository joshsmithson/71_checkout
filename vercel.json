{
  "framework": "vite",
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "trailingSlash": false,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/basic", "destination": "/basic.html" },
    { "source": "/debug", "destination": "/debug.html" },
    { "source": "/home", "destination": "/home.html" },
    { "source": "/((?!assets|sounds|favicon.svg|manifest.json|.*\\.html|.*\\.js|.*\\.css|.*\\.map).*)", "destination": "/index.html" }
  ]
} 